<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.joshbgold.simplemusicfree"
    xmlns:android="http://schemas.android.com/apk/res/android">
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL"/>

    <application
        android:icon="@drawable/ic_hardware_headset"
        android:label="@string/app_name"
        android:theme="@style/Royal">
        <activity
            android:name="com.joshbgold.simplemusicfree.MainActivity"
            android:configChanges="keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.joshbgold.simplemusicfree.PlayListActivity"
            android:label="@string/app_name"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="stateHidden">
        </activity>

        <activity android:name="com.joshbgold.simplemusicfree.FileDialog"
                  android:label="@string/app_name"
                  android:screenOrientation="nosensor">
        </activity>

        <activity android:name="com.joshbgold.simplemusicfree.SettingsActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="nosensor">
        </activity>

    </application>


    </manifest>
